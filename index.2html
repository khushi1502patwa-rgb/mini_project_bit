  <script>
    // App State
    const appState = {
      user: null,
      currentModule: 'dashboard',
      notes: [],
      events: [],
      resume: {},
      health: {
        water: 0,
        meals: [],
        stress: []
      },
      timetable: [],
      voiceRecognition: null,
      timerInterval: null,
      stopwatchInterval: null,
      alarms: []
    };

    // IndexedDB Setup
    let db;
    const dbName = 'OneStopHubDB';
    const dbVersion = 1;

    function initDB() {
      const request = indexedDB.open(dbName, dbVersion);
      
      request.onerror = () => {
        console.error('Database failed to open');
      };
      
      request.onsuccess = () => {
        db = request.result;
        loadOfflineData();
      };
      
      request.onupgradeneeded = (e) => {
        db = e.target.result;
        
        if (!db.objectStoreNames.contains('notes')) {
          db.createObjectStore('notes', { keyPath: 'id', autoIncrement: true });
        }
        if (!db.objectStoreNames.contains('events')) {
          db.createObjectStore('events', { keyPath: 'id', autoIncrement: true });
        }
        if (!db.objectStoreNames.contains('resume')) {
          db.createObjectStore('resume', { keyPath: 'id' });
        }
        if (!db.objectStoreNames.contains('health')) {
          db.createObjectStore('health', { keyPath: 'date' });
        }
        if (!db.objectStoreNames.contains('timetable')) {
          db.createObjectStore('timetable', { keyPath: 'id', autoIncrement: true });
        }
      };
    }

    function saveToIndexedDB(storeName, data) {
      if (!db) return;
      const transaction = db.transaction([storeName], 'readwrite');
      const store = transaction.objectStore(storeName);
      store.put(data);
    }

    function loadFromIndexedDB(storeName, callback) {
      if (!db) return;
      const transaction = db.transaction([storeName], 'readonly');
      const store = transaction.objectStore(storeName);
      const request = store.getAll();
      
      request.onsuccess = () => {
        callback(request.result);
      };
    }

    function loadOfflineData() {
      loadFromIndexedDB('notes', (data) => {
        appState.notes = data || [];
        if (appState.currentModule === 'notes') renderNotes();
      });
      
      loadFromIndexedDB('events', (data) => {
        appState.events = data || [];
        if (appState.currentModule === 'events') renderEvents();
      });
      
      loadFromIndexedDB('timetable', (data) => {
        appState.timetable = data || initializeTimetable();
        if (appState.currentModule === 'timetable') renderTimetable();
      });
    }

    // Authentication
    function handleLogin(e) {
      if (e) e.preventDefault();
      const email = document.getElementById('authEmail').value;
      const password = document.getElementById('authPassword').value;
      
      if (!email || !password) {
        alert('Please enter email and password');
        return;
      }
      
      // Simulate authentication
      showLoading();
      setTimeout(() => {
        appState.user = { email, name: email.split('@')[0] };
        sessionStorage.setItem('user', JSON.stringify(appState.user));
        hideLoading();
        showToast('Welcome back! üéâ');
        showMainApp();
      }, 1000);
    }
    
    //

    function googleSignIn() {
      showToast('Google Sign-In integration ready');
      appState.user = { email: 'student@gmail.com', name: 'Student' };
      showMainApp();
    }

    function logout() {
      appState.user = null;
      document.getElementById('mainApp').classList.add('hidden');
      document.getElementById('authScreen').classList.remove('hidden');
      showToast('Logged out successfully');
    }

    function showMainApp() {
      document.getElementById('authScreen').classList.add('hidden');
      document.getElementById('mainApp').classList.remove('hidden');
      initDB();
    }

    // Navigation
    function showDashboard() {
      hideAllModules();
      document.getElementById('dashboard').classList.remove('hidden');
      appState.currentModule = 'dashboard';
      closeMenu();
    }

    function showModule(moduleName) {
      hideAllModules();
      document.getElementById(moduleName + 'Module').classList.remove('hidden');
      appState.currentModule = moduleName;
      
      switch(moduleName) {
        case 'notes':
          renderNotes();
          break;
        case 'events':
          renderEvents();
          break;
        case 'timetable':
          renderTimetable();
          break;
        case 'health':
          renderHealth();
          break;
      }
    }

    function hideAllModules() {
      const modules = ['dashboard', 'resumeModule', 'notesModule', 'eventsModule', 
                      'healthModule', 'utilitiesModule', 'timetableModule', 'weatherModule'];
      modules.forEach(m => {
        document.getElementById(m).classList.add('hidden');
      });
    }

    function toggleMenu() {
      document.getElementById('navMenu').classList.toggle('active');
    }

    function closeMenu() {
      document.getElementById('navMenu').classList.remove('active');
    }

    function showProfile() {
      showToast('Profile feature coming soon!');
      closeMenu();
    }

    // UI Helpers
    function showLoading() {
      document.getElementById('loading').classList.add('active');
    }

    function hideLoading() {
      document.getElementById('loading').classList.remove('active');
    }

    function showToast(message) {
      const toast = document.getElementById('toast');
      toast.textContent = message;
      toast.classList.add('active');
      setTimeout(() => {
        toast.classList.remove('active');
      }, 3000);
    }

    // Voice Recognition Setup
    function initVoiceRecognition() {
      if ('webkitSpeechRecognition' in window || 'SpeechRecognition' in window) {
        const SpeechRecognition = window.SpeechRecognition || window.webkitSpeechRecognition;
        appState.voiceRecognition = new SpeechRecognition();
        appState.voiceRecognition.continuous = false;
        appState.voiceRecognition.interimResults = false;
        appState.voiceRecognition.lang = 'en-US';
        return true;
      }
      return false;
    }

    function startVoiceInput(targetId) {
      if (!appState.voiceRecognition && !initVoiceRecognition()) {
        showToast('Voice input not supported in this browser');
        return;
      }

      const btn = event.target;
      btn.classList.add('recording');
      
      appState.voiceRecognition.start();
      
      appState.voiceRecognition.onresult = (event) => {
        const transcript = event.results[0][0].transcript;
        document.getElementById(targetId).value = transcript;
        btn.classList.remove('recording');
      };
      
      appState.voiceRecognition.onerror = () => {
        btn.classList.remove('recording');
        showToast('Voice input error');
      };
      
      appState.voiceRecognition.onend = () => {
        btn.classList.remove('recording');
      };
    }

    // Resume Builder
    let educationCount = 0;
    let experienceCount = 0;

    function addEducation() {
      educationCount++;
      const html = `
        <div class="form-group" style="background: white; padding: 1rem; border-radius: 8px; margin-bottom: 1rem;">
