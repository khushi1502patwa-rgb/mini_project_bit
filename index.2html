    function processTimetableQuery(query) {
      const responseDiv = document.getElementById('timetableResponse');
      let response = '';
      
      // Get today's day
      const today = new Date().toLocaleDateString('en-US', { weekday: 'long' });
      
      if (query.includes('today') || query.includes('schedule')) {
        const todayClasses = appState.timetable.filter(c => c.day === today);
        if (todayClasses.length > 0) {
          response = `<strong>Today's Schedule (${today}):</strong><br>`;
          todayClasses.forEach(c => {
            response += `‚Ä¢ ${c.time}: ${c.subject} in ${c.room}<br>`;
          });
        } else {
          response = `No classes scheduled for today (${today})`;
        }
      } else if (query.includes('2nd') || query.includes('second')) {
        const todayClasses = appState.timetable.filter(c => c.day === today).sort((a, b) => a.time.localeCompare(b.time));
        if (todayClasses.length >= 2) {
          const secondClass = todayClasses[1];
          response = `Your 2nd lecture today is <strong>${secondClass.subject}</strong> at ${secondClass.time} in ${secondClass.room}`;
        } else {
          response = "You don't have a 2nd lecture today";
        }
      } else if (query.includes('next')) {
        const now = new Date();
        const currentTime = now.toLocaleTimeString('en-US', { hour: 'numeric', minute: '2-digit', hour12: true });
        const todayClasses = appState.timetable.filter(c => c.day === today);
        
        const nextClass = todayClasses.find(c => c.time > currentTime);
        if (nextClass) {
          response = `Your next class is <strong>${nextClass.subject}</strong> at ${nextClass.time} in ${nextClass.room}`;
        } else {
          response = "No more classes today";
        }
      } else {
        response = 'Try asking: "What\'s my schedule today?" or "What\'s my 2nd lecture?"';
      }
      
      responseDiv.innerHTML = response;
      responseDiv.style.display = 'block';
      
      // Text-to-speech response
      if ('speechSynthesis' in window) {
        const utterance = new SpeechSynthesisUtterance(response.replace(/<[^>]*>/g, ''));
        speechSynthesis.speak(utterance);
      }
    }

